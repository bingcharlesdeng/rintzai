# .env

# Disable treating warnings as errors in CI environment
CI=false

# Prevent ESLint errors from failing the build in development mode
ESLINT_NO_DEV_ERRORS=true

# Disable TypeScript type checking during the build process (optional, use cautiously)
TSC_COMPILE_ON_ERROR=true

# Increase the memory limit for Node.js (helpful for large projects)
NODE_OPTIONS=--max_old_space_size=4096

# Disable source maps in production to reduce bundle size (optional)
GENERATE_SOURCEMAP=false

# Disable the browser opening automatically when you start the dev server (optional)
BROWSER=none